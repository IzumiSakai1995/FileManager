{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "/**" }]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "/**" }]
    },
    "fs:default"
  ]
}